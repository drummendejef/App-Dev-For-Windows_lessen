<Page
    x:Class="UAPClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UAPClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="lblLogin" TextWrapping="Wrap" Text="Login"/>
        <TextBox x:ConnectionId='2' x:Name="txtLogin" TextWrapping="Wrap" Text="dieter"/>
        <TextBlock x:ConnectionId='3' x:Name="textBlock1" TextWrapping="Wrap" Text="Paswoord"/>
        <TextBox x:ConnectionId='4' x:Name="txtPaswoord" TextWrapping="Wrap" Text="dieter"/>
        <TextBlock x:ConnectionId='5' x:Name="lblTag" TextWrapping="Wrap" Text="Tag"/>
        <TextBox x:ConnectionId='6' x:Name="txtTag" TextWrapping="Wrap" Text="dieter"/>
        <TextBlock x:ConnectionId='7' x:Name="lblMessage" TextWrapping="Wrap" Text="Bericht"/>
        <TextBox x:ConnectionId='8' x:Name="txtMessage" TextWrapping="Wrap" Text="bericht van..."/>
        <Button x:ConnectionId='9' x:Name="button" Content="Login" HorizontalAlignment="Stretch"                      VerticalAlignment="Stretch"/>
        <Button x:ConnectionId='10' x:Name="btnSend" Content="Send Push" HorizontalAlignment="Stretch"                        VerticalAlignment="Stretch"/>
    </StackPanel>
</Page>

