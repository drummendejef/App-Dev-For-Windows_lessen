<Page
    x:Class="UAPClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UAPClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="lblLogin" TextWrapping="Wrap" Text="Login"/>
        <TextBox x:Name="txtLogin" TextWrapping="Wrap" Text="dieter"/>
        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Paswoord"/>
        <TextBox x:Name="txtPaswoord" TextWrapping="Wrap" Text="dieter"/>
        <TextBlock x:Name="lblTag" TextWrapping="Wrap" Text="Tag"/>
        <TextBox x:Name="txtTag" TextWrapping="Wrap" Text="dieter"/>
        <TextBlock x:Name="lblMessage" TextWrapping="Wrap" Text="Bericht"/>
        <TextBox x:Name="txtMessage" TextWrapping="Wrap" Text="bericht van..."/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Stretch" Click="button_Click" VerticalAlignment="Stretch"/>
        <Button x:Name="btnSend" Content="Send Push" HorizontalAlignment="Stretch" Click="btnSend_Click"  VerticalAlignment="Stretch"/>
    </StackPanel>
</Page>
